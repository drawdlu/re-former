<%= form_with model: @user do |form| %>
    <div>
        <%= form.label :username, "Username Here: " %>
        <%= form.text_field :username, value: "testing" %>
    </div>

    <div>
        <%= form.label :email %>
        <%= form.email_field :email, placeholder: "user@mail.com" %>
    </div>

    <div>
        <%= form.label :password %>
        <%= form.password_field :password %>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>
